        "code": "Û∞®û",
        "tmux": "ÓöÆ",
        "nvim": "ÓöÆ",
        "discord": "Ôáø",
        "whatsdesk": "Ôà≤",
        "thunderbird": "Ôç∞",
        "spotify": "ÔÜº",
